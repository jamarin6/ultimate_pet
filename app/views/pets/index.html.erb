<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Type</th>
      <th>Avg wins</th>
      <th>Wins</th>
      <th>Battlels</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.owner %></td>
        <td><%= pet.age %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.type %></td>
        <td><%= pet.avg_wins %></td>
        <td><%= pet.wins %></td>
        <td><%= pet.battlels %></td>
        <td><%= pet.user %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

